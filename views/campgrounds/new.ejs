<% include ../partials/header %>

<!--<div class="container">-->
    <div class="row">
        <h1 style="text-align: center">New camp ground page</h1>
        <div style="width: 30%; margin:25px auto">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <input class="form-control" type="text" name="name" placeholder = "name">  <!--name attribute is used to grab data from body-->    
            </div>
            <div class="form-group">
                <input class="form-control" type="number" name="price" placeholder = "price" min="0.01" step="0.01">  <!--name attribute is used to grab data from body-->    
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="image" placeholder = "Image Url"> <!--name attribute is used to grab data from body-->    
            </div>
            <div class="form-group">
                <input class="form-control" type="text" name="description" placeholder = "Description"> <!--description attribute is used to grab data from body-->    
            </div>
            <div class="form-group">
                <button class"btn btn-lg btn-primary btn-block">Submit</button>    
            </div>
        </form>
        <a href="/campgrounds">Go back to campgrounds page</a>
        </div>
    </div>
